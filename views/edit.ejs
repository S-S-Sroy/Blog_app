<% include ./partials/header.ejs%>
<diV class="ui main container segment">
   <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" class="ui form">
    <div class="ui header">Edit <%=blog.title%></div>
    <div class="field">
        <label>Title</label><input type="text" name="blog[title]" value="<%=blog.title%>">
    </div>
    <div class="field">
        <label>Image</label><input type="text" name="blog[image]" value="<%=blog.image%>">
    </div>
    <div class="field">
        <label>Content</label>
        <textarea name="blog[body]"><%=blog.body%></textarea>
    </div>
    <input type="submit" class="ui violet big basic button">
   </form>
</div>
